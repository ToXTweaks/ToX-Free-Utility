<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product Id="*" Name="ToX Free Utility Installer" Language="1033" Version="2.0.0.0" Manufacturer="ToX Tweaks" UpgradeCode="dcabd684-234c-482d-8a88-f1053b521839">
		<Package InstallerVersion="500" Compressed="yes" InstallScope="perMachine" />
		<MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
		<MediaTemplate />

		<Feature Id="ProductFeature" Title="ToX Free Utility" Level="1">
			<ComponentGroupRef Id="ProductComponents" />
		</Feature>
	</Product>

	<Fragment>
		<Directory Id="TARGETDIR" Name="SourceDir">
			<Directory Id="ProgramFilesFolder">
				<Directory Id="INSTALLFOLDER" Name="ToX Free Utility" />
			</Directory>
			<Directory Id="DesktopFolder" Name="Desktop" />
		</Directory>
	</Fragment>

	<Fragment>
		<ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
			<!-- Install the ToX Free Utility files -->
			<Component Id="MainExecutable" Guid="">
				<File Id="ToXFreeUtilityExecutable" Source="ToX_Free_Utility.exe" KeyPath="yes" />
			</Component>

			<!-- Create a desktop shortcut -->
			<Component Id="DesktopShortcut" Guid="">
				<Shortcut Id="DesktopShortcutToXFree" Directory="DesktopFolder" Name="ToX Free Utility" Target="[INSTALLFOLDER]ToX_Free_Utility.exe" WorkingDirectory="INSTALLFOLDER" Icon="ToXIcon.ico" />
				<RemoveFolder Id="DesktopFolder" On="uninstall" />
				<RegistryValue Root="HKCU" Key="Software\ToX Tweaks" Name="Installed" Type="integer" Value="1" KeyPath="yes" />
			</Component>
		</ComponentGroup>
	</Fragment>

	<!-- Add icons -->
	<Fragment>
		<Icon Id="ToXIcon.ico" SourceFile="ToXIcon.ico" />
	</Fragment>
</Wix>
